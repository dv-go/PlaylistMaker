<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для Toolbar -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/settings_screen_background_color</item>
        <item name="titleTextAppearance">@style/SettingsHeaderStyle</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <!-- Стиль для заголовка текста Toolbar -->
    <style name="SettingsHeaderStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/settings_content_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>

    <!-- Стиль для кнопок на главном экране -->
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">@color/buttons_content_black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding_10dp</item>
        <item name="iconTint">@color/buttons_content_black</item>
        <item name="cornerRadius">@dimen/default_size</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль для пунктов меню -->
    <style name="SettingsMenuItemStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/settings_content_color</item>
        <item name="android:drawablePadding">@dimen/default_size_16</item>
        <item name="android:paddingVertical">@dimen/default_size_12</item>
    </style>

    <!-- Общий стиль для SwitchMaterial -->
    <style name="CustomSwitchMaterialStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/default_size_12</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="iconTint">@color/settings_content_color</item>
    </style>

    <!-- Стиль для EditText на странице поиска -->
    <style name="SearchEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingTop">@dimen/default_size_8</item>
        <item name="android:paddingBottom">@dimen/default_size_8</item>
        <item name="android:drawablePadding">@dimen/default_size_8</item>
        <item name="android:background">@drawable/rounded_edit_text_background</item>
        <item name="android:textSize">@dimen/main_text_size_16</item>
        <item name="android:textColor">@color/edit_text_search_text_color</item>
    </style>

    <!-- Стиль кнопки "Обновить" на странице поиска -->
    <style name="SearchRefreshButtonStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/search_refresh_button_textcolor</item>
        <item name="android:backgroundTint">@color/search_refresh_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">16.41sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/default_size</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">9dp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <color name="search_refresh_button_textcolor">#FFFFFF</color>
    <color name="search_refresh_button_background">#1A1B22</color>
</resources>
