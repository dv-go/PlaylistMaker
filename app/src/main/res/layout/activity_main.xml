<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_background_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/default_size"
    android:paddingEnd="@dimen/default_size"
    android:paddingBottom="28dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_name"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_size"
        android:fontFamily="@font/ys_display_medium"
        android:paddingTop="14dp"
        android:paddingBottom="@dimen/default_size"
        />

    <Button
        android:id="@+id/button_1"
        style="@style/MainButtonStyle"
        android:layout_weight="1"
        android:layout_marginTop="24dp"
        android:text="@string/first_button_text"
        app:icon="@drawable/ic_loupe"
        />

    <Button
        android:id="@+id/button_2"
        style="@style/MainButtonStyle"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/default_size"
        android:text="@string/second_button_text"
        app:icon="@drawable/ic_light_mode"
        />

    <Button
        android:id="@+id/button_3"
        style="@style/MainButtonStyle"
        android:layout_weight="1"
        android:text="@string/third_button_text"
        app:icon="@drawable/ic_settings"
        />

</LinearLayout>
